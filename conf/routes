# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Basic User routes
GET     /user                       controllers.UserController.listUsers()
GET     /user/:id                   controllers.UserController.retrieve(id:Int)
POST    /user                       controllers.UserController.create(request:Request)
PUT     /user                       controllers.UserController.update(request:Request)
DELETE  /user/:id                   controllers.UserController.delete(id:Int)
